<phone:PhoneApplicationPage
    x:Class="WritersToolbox.views.PivotPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:Coding4Fun="clr-namespace:Coding4Fun.Toolkit.Controls;assembly=Coding4Fun.Toolkit.Controls"
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="696"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    shell:SystemTray.IsVisible="True"
    Style="{StaticResource TransitionPageStyle}">

    <!--LayoutRoot ist das Stammraster, in dem alle anderen Seiteninhalte platziert werden-->
    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush Stretch="None" ImageSource="/Assets/hintergrund_neueIdee_zettelUnten_2.png" />
        </Grid.Background>
        <Rectangle Fill="#FF72A91C" Margin="0,50,0,0" VerticalAlignment="Top" Height="83"/>
        <!--Pivotsteuerelement-->
        <!--Neue Notiz anlegen-->
        <phone:Pivot Title="" Margin="0,28,0,0" FontFamily="/WritersToolbox;component/Fonts.zip#Yu Gothic">

            <!--Pivotelement eins-->
            <phone:PivotItem Header="Notiz" Margin="12,28,12,10" FontFamily="/WritersToolbox;component/Fonts.zip#Yu Gothic">
                <Grid x:Name="ContentPanel_Notiz" Grid.Row="1" Margin="12,0,12,0">
                    <ScrollViewer x:Name='scroller_Notiz' VerticalScrollBarVisibility='Visible' Margin="0,0,0,-95" Height="524" VerticalAlignment="Top" FontFamily="/WritersToolbox;component/Fonts.zip#Yu Gothic" >
                        <StackPanel x:Name='listItems_Notiz'>
                            <Canvas Height="72" Width="432">
                                <TextBox x:Name="titleTextBox" Height="72" TextWrapping="Wrap" Text="Titel" Width="377" GotFocus="titleTextBox_GotFocus" LostFocus="titleTextBox_LostFocus" Foreground="White" FontFamily="/WritersToolbox;component/Fonts.zip#Yu Gothic" FontSize="26.667" SelectionForeground="White" SelectionBackground="Transparent">
                                    <TextBox.Background>
                                        <SolidColorBrush Color="#333C3C3C"/>
                                    </TextBox.Background>
                                    <TextBox.BorderBrush>
                                        <SolidColorBrush Color="#33636161"/>
                                    </TextBox.BorderBrush>
                                </TextBox>
                                <Image x:Name="micro1" Height="40" Width="46" Canvas.Left="377" Source="/icons/micro.png" Canvas.Top="16" Tap="micro1_Tap"/>
                            </Canvas>
                            <TextBox x:Name="detailsTextBox" Height="408" TextWrapping="Wrap" Text="Details" Width="432" Canvas.Top="58" TextChanged="TextBox_TextChanged" AcceptsReturn="True" GotFocus="detailsTextBox_GotFocus" LostFocus="detailsTextBox_LostFocus" Foreground="#FFFFF8F8" FontFamily="/WritersToolbox;component/Fonts.zip#Yu Gothic" FontSize="26.667" SelectionForeground="White" SelectionBackground="#643C3C3C">
                                <TextBox.BorderBrush>
                                    <SolidColorBrush Color="#33636161"/>
                                </TextBox.BorderBrush>
                                <TextBox.Background>
                                    <SolidColorBrush Color="#333C3C3C"/>
                                </TextBox.Background>
                            </TextBox>
                            <Image x:Name="micro2" Height="40" Width="46" Canvas.Left="377" Source="/icons/micro.png" Canvas.Top="16" Tap="micro2_Tap"/>
                        </StackPanel>
                    </ScrollViewer>
                    <Canvas/>
                </Grid>
            </phone:PivotItem>

            <!--Pivote zwei-->
            <phone:PivotItem Header="Record" Margin="12,28,12,10">

                <Grid>
                    <Coding4Fun:RoundToggleButton Content="" x:Name="addRecordButton"  HorizontalAlignment="Right" Margin="0,10,10,0" Height="53" Width="72" BorderThickness="1" VerticalAlignment="Top" Checked="RecordAudioChecked" Unchecked="RecordAudioUnchecked" >
                        <Coding4Fun:RoundToggleButton.Background>
                            <ImageBrush Stretch="Fill" ImageSource="/icons/aufnahme.png"/>
                        </Coding4Fun:RoundToggleButton.Background>
                    </Coding4Fun:RoundToggleButton>
                    <Coding4Fun:RoundButton Content="" x:Name="deleteRecordButton" HorizontalAlignment="Left" Margin="234,10,0,0" VerticalAlignment="Top" Height="55" Width="72" BorderThickness="1" Click="deleteRecordButton_Click" PressedBrush="{x:Null}" >
                        <Coding4Fun:RoundButton.Background>
                            <ImageBrush Stretch="Fill" ImageSource="/icons/delete.png"/>
                        </Coding4Fun:RoundButton.Background>
                    </Coding4Fun:RoundButton>

                    <Coding4Fun:RoundButton Content="" x:Name="zurueckRecordButton"  HorizontalAlignment="Right" Margin="0,10,80,0" Height="54" Width="72" BorderThickness="1" VerticalAlignment="Top" Click="zurueckRecordButton_Click">
                        <Coding4Fun:RoundButton.Background>
                            <ImageBrush Stretch="Fill" ImageSource="/icons/zurueck.png"/>
                        </Coding4Fun:RoundButton.Background>
                    </Coding4Fun:RoundButton>
                    <CheckBox x:Name="selectAllRecordCheckBox" Content="Alles auswählen" HorizontalAlignment="Left" Margin="0,-5,0,0" VerticalAlignment="Top" Width="235" Unchecked="selectAllRecordCheckBox_Unchecked" Checked="selectAllRecordCheckBox_Checked" RenderTransformOrigin="0.5,0.5" FontFamily="/WritersToolbox;component/Fonts.zip#Yu Gothic" />
                    <Canvas Margin="0,65,0,442">
                        <TextBlock x:Name="lastPlay" Width="325" Canvas.Left="121"/>
                    </Canvas>
                    <toolkit:LongListMultiSelector 
                    EnforceIsSelectionEnabled="false" 
                    SelectionChanged="record_selectionChanged" 
                    LayoutMode="Grid" GridCellSize="200,200" 
                    x:Name="llms_records" 
                    DataContext="{Binding}" 
                    IsGroupingEnabled="False" Background="#FFE44545" Margin="0,84,0,17" >
                        <toolkit:LongListMultiSelector.ItemTemplate>
                            <DataTemplate>
                                <Grid Background="{StaticResource PhoneAccentBrush}"
                                        Margin="0, 0, 12, 12"
                                        Tap="Sound_Tap" Hold="Grid_Hold">
                                    <Grid VerticalAlignment="Top"
                                      HorizontalAlignment="Right"
                                      Width="40"
                                      Height="40"
                                      Margin="0, 6, 6, 0">
                                        <Ellipse Stroke="{StaticResource PhoneForegroundBrush}" 
                                             StrokeThickness="3" />
                                        <Image Source="/icons/play.png" />
                                    </Grid>
                                    <StackPanel VerticalAlignment="Bottom">
                                        <TextBlock Text="{Binding FilePath}" Margin="6, 0, 0, 6" FontSize="11" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </toolkit:LongListMultiSelector.ItemTemplate>
                    </toolkit:LongListMultiSelector>
                    <Rectangle x:Name="progressbar_background" Fill="#CC212121" Margin="-14,450,-24,-12" VerticalAlignment="Top" Height="86"/>
                    <TextBlock  Text="Last play :" Margin="10,353,347,141" Visibility="Collapsed"/>
                    <TextBlock x:Name="CurrentTime" Margin="10,481,347,13">
                    	<Run Text=" "/>
                    	<LineBreak/>
                    	<Run/>
                    </TextBlock>
                    <TextBlock x:Name="EndTimer" Margin="355,481,2,13" TextAlignment="Right">
                    	<Run Text=" "/>
                    	<LineBreak/>
                    	<Run/>
                    </TextBlock>
                    <MediaElement x:Name="AudioPlayer" Volume="1" />
                    <Slider x:Name="progressbar" HorizontalAlignment="Left" Margin="0,447,0,-7" VerticalAlignment="Top" Width="446" ValueChanged="progressbar_ValueChanged" Background="White" Foreground="#FF72A91C"/>

                </Grid>
            </phone:PivotItem>

            <!--Pivotelement drei-->
            <phone:PivotItem Header="Bilder" Margin="12,28,12,10">
                <Grid>
                    <Coding4Fun:RoundButton  x:Name="deleteButton" Content="" HorizontalAlignment="Left" Margin="312,10,0,0" VerticalAlignment="Top" Height="53" Width="72" BorderThickness="1" Click="deleteButton_Click">
                        <Coding4Fun:RoundButton.Background>
                            <ImageBrush Stretch="Fill" ImageSource="/icons/delete.png"/>
                        </Coding4Fun:RoundButton.Background>
                    </Coding4Fun:RoundButton>
                    <Coding4Fun:RoundButton x:Name="addButton" Content="" HorizontalAlignment="Right" Margin="0,9,0,0" Height="54" Width="72" BorderThickness="1" VerticalAlignment="Top" Click="addButton_Click">
                        <Coding4Fun:RoundButton.Background>
                            <ImageBrush Stretch="Fill" ImageSource="/icons/add.png"/>
                        </Coding4Fun:RoundButton.Background>
                    </Coding4Fun:RoundButton>
                    <Coding4Fun:RoundButton x:Name="zurueckButton" Content="" HorizontalAlignment="Right" Margin="0,10,144,0" Height="53" Width="72" BorderThickness="1" VerticalAlignment="Top" Click="zurueckButton_Click">
                        <Coding4Fun:RoundButton.Background>
                            <ImageBrush Stretch="Fill" ImageSource="/icons/zurueck.png"/>
                        </Coding4Fun:RoundButton.Background>
                    </Coding4Fun:RoundButton>

                    <CheckBox x:Name="selectAllCheckBox" Content="alles auswählen" HorizontalAlignment="Left" Margin="0,-7,0,0" VerticalAlignment="Top" Width="240" Checked="selectAllCheckBox_Checked" Unchecked="selectAllCheckBox_Unchecked" Height="77"/>
                    <toolkit:LongListMultiSelector 
                    EnforceIsSelectionEnabled="false" 
                    SelectionChanged="image_selectionChanged" 
                    LayoutMode="Grid" GridCellSize="200,200" 
                    x:Name="llms_images" 
                    DataContext="{Binding}" 
                    IsGroupingEnabled="False" Background="#FFE44545" Margin="0,70,0,0" >

                        <toolkit:LongListMultiSelector.ItemTemplate>
                            <DataTemplate>
                                <StackPanel x:Name="ds">
                                    <Image x:Name="imageView" Source="{Binding Vorschaubild}" Height="190" Width="190" Stretch="Uniform" Tap="imageView_Tap" Hold="imageView_Hold" />
                                </StackPanel>
                            </DataTemplate>
                        </toolkit:LongListMultiSelector.ItemTemplate>
                    </toolkit:LongListMultiSelector>
                </Grid>
            </phone:PivotItem>

            <phone:PivotItem Header="Schlagwörter" Margin="12,28,12,10">
                <ScrollViewer x:Name="scroller_Schlagwoerter" VerticalScrollBarVisibility='Visible' Margin="0,0,0,-95" Height="524" VerticalAlignment="Top" >
                    <StackPanel x:Name="listItems_Schlagwoerter">
                        <TextBox x:Name="schlagwoerterTextBox" Height="300" TextWrapping="Wrap" Width="432" AcceptsReturn="True" TextChanged="schlagwoerterTextBox_TextChanged" Background="#333C3C3C" BorderBrush="#33636161" SelectionBackground="#663C3C3C" Foreground="White" GotFocus="schlagwoerterTextBox_GotFocus" LostFocus="schlagwoerterTextBox_LostFocus"/>
                        <Image x:Name="micro3" Height="40" Width="46" Canvas.Left="377" Source="/icons/micro.png" Canvas.Top="16" Tap="micro3_Tap"/>
                        <TextBlock Text="     Bitte trennen Sie die Wörter mit Semikolon ( ; )" VerticalAlignment="Top" Height="44" />
                    </StackPanel>
                </ScrollViewer>
            </phone:PivotItem>
        </phone:Pivot>
        <TextBlock HorizontalAlignment="Left" Height="52" TextWrapping="Wrap" Text="neue Notiz anlegen" VerticalAlignment="Top" Width="440" LineHeight="13.333" FontFamily="/WritersToolbox;component/Fonts.zip#Yu Gothic" FontSize="26.667" Margin="28,6,0,0"/>
    </Grid>
    <!--Sample code showing usage of ApplicationBar-->

    <phone:PhoneApplicationPage.ApplicationBar >
        <shell:ApplicationBar IsVisible="True" IsMenuEnabled="false" BackgroundColor="#FF72A91C">
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

</phone:PhoneApplicationPage>